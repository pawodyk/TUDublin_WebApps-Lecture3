{% extends 'base.html.twig' %}

{% block nav_form %} active {% endblock %}

{% block content %}

    <h1>MGW Sales Enquiry</h1>
    <form method="GET" action="/">
        <input type="hidden" name="page" value="processForm">
        <div class="form-group">
            <label for="customerName">Your name</label>
            <input id="customerName" class="form-control" name="customerName" required>
        </div>
        <div class="form-group">
            <label for="customerEmail">Email address</label>
            <input id="customerEmail" type="email" class="form-control" aria-describedby="emailHelp" name="customerEmail" required>
            <small id="emailHelp" class="form-text text-muted">
                We'll never share your email with anyone else.
            </small>
        </div>
        <div class="form-group">
            <label for="enquiryContent">Your enquiry</label>
            <textarea id="enquiryContent" class="form-control" name="enquiry" rows="3"></textarea>
        </div>
        <input type="submit" value="Submit enquiry" class="btn btn-success">
    </form>

{% endblock %}